{
  "compilerOptions": {
    "outDir": "./javascript",
    "rootDir": "./src",
    "allowJs": true,
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom", "webworker"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
